<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todo_today">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_foreground"
        android:label="@string/app_name_final"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.todo_today.OrmMvvm.AddEditNoteActivity"
            android:parentActivityName="com.example.todo_today.OrmMvvm.MvvmMainActivity"
            android:theme="@style/MvvmTheme"/>
        <activity
            android:name="com.example.todo_today.OrmMvvm.MvvmMainActivity"
            android:theme="@style/MvvmTheme"
            android:launchMode="singleTop"/>
        <activity android:name=".fragment.FragmentActivity"/>
        <activity android:name=".mvvm.AdminLoginActivity" />
        <activity android:name=".Dashboard.NewsActivity" />
        <activity android:name=".AppInfo.AppInfoActivity" />
        <activity android:name=".AppDetails.AboutActivity" />
        <activity android:name=".AppDetails.ContactActivity" />
        <activity android:name=".AppDetails.ProfileActivity" />
        <activity android:name=".Dashboard.DashboardActivity" />
        <activity android:name=".TodoActivity.EditActivity" />
        <activity android:name=".TodoActivity.TodoDetailActivity" />
        <activity android:name=".TodoActivity.AddTodoActivity" />
        <activity android:name=".TodoActivity.HomeActivity" />
        <activity android:name=".LoginSignup.RegisterActivity" />
        <activity android:name=".SplashScreen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginSignup.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>