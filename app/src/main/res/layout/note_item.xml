<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:textColor="#00897B"
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/text_view_priority"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/text_view_title_1"
            android:layout_below="@id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cormorant_upright"
            android:text="Description: "
            android:textSize="20sp"
            android:textColor="#F4511E"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="#0B0A0A"
            android:fontFamily="@font/cormorant_upright"
            android:layout_toEndOf="@id/text_view_title_1"
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:text="Description" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvLblIsClosed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_description"
            android:layout_toStartOf="@id/tvLblIsClosed1"
            android:text="Status: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:id="@+id/chkbxIsComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_description"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/tvLblIsClosed1"
            android:maxLines="1"
            android:text="Status"
            android:textColor="#000"
            android:textStyle="bold" />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/datefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLblIsClosed1"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/InputTodoDate"
            android:text="Date: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_marginEnd="30dp"
            android:id="@+id/InputTodoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLblIsClosed1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/tvLblIsClosed1"
            android:maxLines="1"
            android:text="Date"
            android:textColor="#FF0000"
            android:textStyle="italic" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>